{% extends 'base.html.twig' %}

{% block title %}Pizza's{% endblock %}

{% block body %}
    <div class="container">
        {% for product in pizzas %}
            <div class="card-deck">
                <div class="row">
                    <div class="col-sm-12 col-md-9 col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <p>{{ product.name }}</p>
                                <img class="card-img img-fluid" src="{{ product.image }}" alt=" {{ product.image }}">
                                <p class="card-text">{{  product.description  }}</p>
                                <p>â‚¬ {{ product.price }}</p>
                                <a href="{{ path('app_order', { id: product.id }) }}" class="btn btn-danger">Bestel {{ product.name }} pizza</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}