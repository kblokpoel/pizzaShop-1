{% extends 'base.html.twig' %}

{% block title %}Pizza homepage{% endblock %}

{% block body %}
    <br>
    <br>
    <main class="body">
        <div class="container">
            <div class="row">
                <h2>CategorieÃ«n ({{ categories|length }})</h2>
                {% for category in categories %}
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <img class="center-block card-img img-fluid category-img" alt="{{ category.name }} pizza" src="{{ category.image }}" style="height: 400px; width: auto;">
                            <h5 class="card-title mb-3">{{ category.name }}</h5>
                            <p class="card-text">{{ category.description }}</p>
                            <button class="btn-danger"><a href="{{ path("app_pizza" , {id:category.id}) }}">Koop hier</a></button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>

{% endblock %}